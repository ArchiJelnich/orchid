<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_back"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".main_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_screen"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="95"
        android:orientation="vertical" >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_head"
            android:gravity="center"
            style="@style/header_text"
            android:text="@string/cur_def_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/bt_nav_settings"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_white"
                app:srcCompat="@drawable/plant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:text="@string/cur_def_type" />


    </LinearLayout>
    </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_head"
            android:gravity="center"
            style="@style/header_text"
            android:text="@string/cur_def_watering"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_head"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>